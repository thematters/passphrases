{
  "name": "@matters/passphrases",
  "version": "0.0.1-alpha.5",
  "description": "",
  "author": "https://github.com/thematters",
  "homepage": "https://github.com/thematters/passphrases",
  "repository": {
    "type": "git",
    "url": "git@github.com:thematters/passphrases.git"
  },
  "keywords": [
    "passphrases",
    "memorable password",
    "diceware"
  ],
  "engines": {
    "node": ">=20.0"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.esm.js",
  "browser": "./dist/index.browser.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/index.cjs",
      "browser": "./dist/index.browser.js",
      "default": "./dist/index.esm.js"
    },
    "./browser": {
      "types": "./dist/index.browser.d.ts",
      "default": "./dist/index.browser.js"
    }
  },
  "files": [
    "dist",
    "corpus/dict.json"
  ],
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "build:dict": "node --loader ts-node/esm --experimental-specifier-resolution=node ./bin/build-dict.ts",
    "shuffle:dict": "node --loader ts-node/esm --experimental-specifier-resolution=node ./bin/shuffle-dict.ts",
    "format": "prettier --write \"{src,}/**/*.{ts,tsx,json}\"",
    "lint": "tsc && eslint",
    "test": "vitest --run",
    "prepare": "husky install",
    "benchmark": "node --loader ts-node/esm --experimental-specifier-resolution=node ./bin/estimate-memory-usage.ts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.2",
    "@types/react": "^17.0.53",
    "@types/react-dom": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "object-sizeof": "^2.6.3",
    "prettier": "^2.8.8",
    "rollup": "^3.25.3",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.0",
    "typescript": "^5.1.3",
    "vitest": "^0.32.2"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "base64url": "^3.0.1"
  }
}
